mport java.awt.*;
import javax.swing.*;
import java.awt.event.*;
class KeyTest extends JPanel{
	private class MyKeyAdapter extends KeyAdapter{
		public void keyPressed(KeyEvent kevent){
			System.out.println("you pressed the key:"+kevent.getKeyText(kevent.getKeyCode()));
			setBackground(Color.blue);repaint();
		}
		public void keyReleased(KeyEvent kevent){
			System.out.println("code:"+kevent.getKeyCode());
			setBackground(Color.red);repaint();
		}
		public void keyTyped(KeyEvent kevent){
			if(kevent.getKeyChar()=='x') 
				System.exit(0);
		}
	}
	public KeyTest(){
		JTextField tField=new JTextField(20);
		add(tField);
		tField.addKeyListener(new MyKeyAdapter());
	}
	public static void main(String[] args){
	JFrame myapp=new JFrame("键盘测试");
	KeyTest p=new KeyTest();
	myapp.add(p);
	myapp.setSize(300,300);
	myapp.setVisible(true);
	myapp.addWindowListener(new MywindowDestroyer());
	}
}
class MywindowDestroyer extends WindowAdapter{
	public void windowClosing(WindowEvent e){
		System.exit(0);
	}
}
